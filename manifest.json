{
  "name": "Marshmellow",
  "version": "1.0",
  "description": "Delay gratifcation and collect marshmellows!",
  "permissions": ["activeTab", "tabs", "storage", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/marshmellow-icon-16.png",
      "32": "images/marshmellow-icon-32.png",
      "48": "images/marshmellow-icon-48.png",
      "128": "images/marshmellow-icon-128.png"
    }
  },
  "icons": {
    "16": "images/marshmellow-icon-16.png",
    "32": "images/marshmellow-icon-32.png",
    "48": "images/marshmellow-icon-48.png",
    "128": "images/marshmellow-icon-128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}